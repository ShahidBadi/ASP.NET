
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8">
        <meta content="width=device-width, initial-scale=1.0" name="viewport">
        <title>MOM - Meeting Management System</title>

        <!-- Google Fonts -->
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

        <!-- Bootstrap Icons -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

        <link rel="stylesheet" href="~/assets/css/style.css">

    </head>
    <body>
        <!-- Header -->
        <header class="header">
            <div class="logo-section">
                <div class="logo-icon">
                    <i class="bi bi-journal-text"></i>
                </div>
                <div class="logo-text">MOM</div>
                <div class="menu-toggle" onclick="toggleSidebar()">
                    <i class="bi bi-list"></i>
                </div>
            </div>

            <div class="search-bar">
                <i class="bi bi-search search-icon"></i>
                <input type="text" class="search-input" placeholder="Search meetings, members, venues...">
            </div>

            <div class="header-actions">
                @* <div class="icon-btn">
                    <i class="bi bi-bell"></i>
                    <span class="badge-count">4</span>
                </div>
                <div class="icon-btn">
                    <i class="bi bi-chat-left-text"></i>
                    <span class="badge-count">3</span>
                </div> *@
                <div class="profile-btn">
                    <div class="profile-avatar">SB</div>
                    <div class="profile-name">Badi</div>
                </div>
            </div>
        </header>

        <!-- Sidebar -->
        <aside class="sidebar" id="sidebar">
            <nav>
                <div class="nav-section">
                    <div class="nav-heading">Main</div>
                    <div class="nav-item">
                        <a  class="nav-link active" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-grid"></i>
                            <span>Dashboard</span>
                        </a>
                    </div>
                </div>

                <div class="nav-section">
                    <div class="nav-heading">MASTER DATA</div>
                    <div class="nav-item">
                        <a  class="nav-link" asp-controller="Department" asp-action="DepartmentList">
                            <i class="bi bi-building"></i>
                            <span>Department</span>
                        </a>
                    </div>
                    <div class="nav-item">
                        <a class="nav-link" asp-controller="MeetingType" asp-action="MeetingTypeList">
                            <i class="bi bi-calendar-event"></i>
                            <span>Meeting Type</span>
                        </a>
                    </div>
                    <div class="nav-item">
                        <a class="nav-link" asp-controller="MeetingVenue" asp-action="MeetingVenueList">
                            <i class="bi bi-geo-alt"></i>
                            <span>Venues</span>
                        </a>
                    </div>
                    <div class="nav-item">
                        <a class="nav-link" asp-controller="Staff" asp-action="StaffList">
                            <i class="bi bi-people"></i>
                            <span>Staff</span>
                        </a>
                    </div>
                
                    @* <div class="nav-item">
                        <a class="nav-link" asp-controller="MeetingMember" asp-action="MeetingMembersList">
                            <i class="bi bi-person-check"></i>
                            <span>Meeting Members</span>
                        </a>
                    </div> *@
                </div>

                <div class="nav-section">
                    <div class="nav-heading">MEETINGS</div>
                    @* <div class="nav-item">
                        <a href="#" class="nav-link">
                            <i class="bi bi-file-earmark"></i>
                            <span>Blank Page</span>
                        </a>
                    </div> *@
                    <div class="nav-item">
                        <a class="nav-link" asp-controller="Meeting" asp-action="MeetingList">
                            <i class="bi bi-calendar3"></i>
                            <span>Meetings</span>
                        </a>
                    </div>
                    @* <div class="nav-item">
                        <a class="nav-link" asp-controller="Meeting" asp-action="Schedule">
                            <i class="bi bi-calendar-plus"></i>
                            <span>Schedule Meeting</span>
                        </a>
                    </div>

                    <div class="nav-item">
                        <a class="nav-link" asp-controller="Attendance" asp-action="Index">
                            <i class="bi bi-clipboard-check"></i>
                            <span>Attendance</span>
                        </a>
                    </div> *@
                </div>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            @RenderBody()
        </main>

        <!-- Footer -->
        <footer class="footer">
            <div>&copy; 2024 MOM - Meeting Management System. All Rights Reserved</div>
        </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

 
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>

    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

        <script>
            function toggleSidebar() {
                document.getElementById('sidebar').classList.toggle('active');
            }

            // Add smooth scroll behavior
            document.querySelectorAll('.nav-link').forEach(link => {
                link.addEventListener('click', function(e) {
                    document.querySelectorAll('.nav-link').forEach(l => l.classList.remove('active'));
                    this.classList.add('active');
                });
            });
        </script>
    </body>
    </html>
