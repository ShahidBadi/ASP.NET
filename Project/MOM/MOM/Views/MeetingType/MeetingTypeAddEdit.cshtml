@model MOM.Models.MeetingTypeModel

<link rel="stylesheet" href="~/assets/css/AddEdit.css" />

<!-- Page Header -->
<div class="page-header">
    <h1 class="page-title">Add New Meeting Type</h1>
    <div class="breadcrumb">
        <a asp-controller="Home" asp-action="Index">
            <i class="bi bi-house-door"></i> Home
        </a>
        <span>/</span>
        <a asp-controller="MeetingType" asp-action="MeetingTypeList">
            Meeting Type
        </a>
        <span>/</span>
        <span>Add New</span>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="card-title">
            <i class="bi bi-building"></i>
            Meeting Type Information
        </h5>
    </div>

    <div class="card-body">

        <div class="info-box">
            <i class="bi bi-info-circle"></i>
            <div class="info-box-content">
                <div class="info-box-title">Quick Tip</div>
                <div class="info-box-text">
                    All fields marked with * are required.
                </div>
            </div>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <form asp-action="SaveMeetingType"
              asp-controller="MeetingType"
              method="post">

            @* @Html.AntiForgeryToken() *@

            <input type="hidden" asp-for="MeetingTypeID" />

            <!-- Meeting Type -->
            <div class="form-group">
                <label asp-for="MeetingTypeName" class="form-label">
                    <i class="bi bi-building"></i>
                    Meeting Type
                    <span class="required">*</span>
                </label>

                <div class="input-group">
                    <i class="bi bi-building input-icon"></i>
                    <input asp-for="MeetingTypeName"
                           class="form-control"
                           placeholder="Enter Meeting Type Name" />
                </div>

                <span asp-validation-for="MeetingTypeName"
                      class="text-danger"></span>
            </div>

            <!-- Remarks -->
            <div class="form-group">
                <label asp-for="Remarks" class="form-label">
                    <i class="bi bi-card-text"></i>
                    Remarks
                </label>

                <textarea asp-for="Remarks"
                          class="form-control"
                          rows="4"
                          placeholder="Enter remarks..."
                          style="resize: vertical; min-height: 100px;">
                </textarea>

                <span asp-validation-for="Remarks"
                      class="text-danger"></span>
            </div>

            <!-- Buttons -->
            <div class="form-actions">
                <a class="btn btn-outline"
                   asp-controller="MeetingType"
                   asp-action="MeetingTypeList">
                    Back to List
                </a>

                <button type="reset" class="btn btn-secondary">
                    Reset
                </button>

                <button type="submit" class="btn btn-success">
                    Create Meeting Type
                </button>
            </div>
        </form>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>