@model List<MOM.Models.MeetingVenueModel>

    <link rel="stylesheet" href="~/assets/css/List.css">



    <div class="page-header">
        <h1 class="page-title">Meeting Venue</h1>
        <div class="breadcrumb">
            <a href="#"><i class="bi bi-house-door"></i> Home</a>
            <span>/</span>
            <span>MeetingVenue</span>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="card-title">All Venue</h5>
            <a class="btn btn-success" asp-controller="MeetingVenue" asp-action="MeetingVenueAddEdit">
                <i class="bi bi-plus-circle"></i>
                Add Venue
            </a>
        </div>
    <hr />
    @if (TempData["successMessage"] != null)
    {
        <p>@TempData["successMessage"]</p>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <p>@TempData["ErrorMessage"]</p>
    }
    <hr />
        <div class="card-body">
            <div class="table-container">
                <table style="width:900px">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Venue Name</th>
                            <th>Created</th>
                            <th>Modified</th>
                            @* <th>Total Meetings</th> *@
                        <th style="text-align: right;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if(Model.Count()>0 && Model != null)
                        {
                            foreach(var item in Model)
                            {
                                <tr>
                                    <td>@item.MeetingVenueID</td>
                                    <td>@item.MeetingVenueName</td>
                                    <td>@item.Created</td>
                                    <td>@item.Modified</td>
                                    @* <td>2</td> *@
                                     <td>
                                        <div class="action-buttons">
                                        <a asp-action="MeetingVenueAddEdit" asp-controller="MeetingVenue" asp-route-VenueId="@item.MeetingVenueID" class="btn btn-primary btn-sm">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        <a asp-action="DeleteVenue" asp-controller="MeetingVenue" asp-route-VenueId="@item.MeetingVenueID"  class="btn btn-danger btn-sm">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                        }
                    }
                   
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script>
        function toggleSidebar() {
            document.getElementById('sidebar').classList.toggle('active');
        }
    </script>

