    <script>
        // Form validation
        document.getElementById('addStaffForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            let isValid = true;
            const requiredFields = this.querySelectorAll('[required]');
            
            // Clear previous validation
            requiredFields.forEach(field => {
                field.classList.remove('is-invalid');
            });
            
            // Validate required fields
            requiredFields.forEach(field => {
                if (!field.value.trim()) {
                    field.classList.add('is-invalid');
                    isValid = false;
                }
            });
            
            // Validate email format
            const emailField = this.querySelector('input[type="email"]');
            if (emailField.value.trim() && !isValidEmail(emailField.value)) {
                emailField.classList.add('is-invalid');
                isValid = false;
            }
            
            if (isValid) {
                // Collect form data
                const formData = {
                    staffName: this.querySelector('input[type="text"]').value,
                    email: emailField.value,
                    remarks: this.querySelector('textarea').value,
                    department: this.querySelector('select').value,
                    mobile: this.querySelector('input[type="tel"]').value
                };
                
                // Show success message
                alert('Staff member created successfully!\n\nStaff Details:\n' +
                      `Name: ${formData.staffName}\n` +
                      `Email: ${formData.email}\n` +
                      `Department: ${formData.department}\n` +
                      `Mobile: ${formData.mobile ? '+91 ' + formData.mobile : 'Not provided'}\n` +
                      `Remarks: ${formData.remarks || 'None'}`);
                
                // Reset form
                this.reset();
            }
        });

        // Email validation function
       

        // Real-time validation
        document.querySelectorAll('[required]').forEach(field => {
            field.addEventListener('input', function() {
                if (this.value.trim()) {
                    this.classList.remove('is-invalid');
                }
            });
        });

