        :root {
            --dark-bg: #0f172a;
            --dark-card: #1e293b;
            --dark-border: #334155;
            --dark-text: #cbd5e1;
            --dark-text-muted: #94a3b8;
            --dark-input-bg: #1e293b;
            --dark-input-border: #475569;
            --dark-input-focus: #3b82f6;
            --dark-primary: #3b82f6;
            --dark-secondary: #64748b;
            --dark-success: #10b981;
            --dark-danger: #ef4444;
            --dark-info: #0ea5e9;
        }

        [data-bs-theme="dark"] {
            --bs-body-bg: var(--dark-bg);
            --bs-body-color: var(--dark-text);
            --bs-border-color: var(--dark-border);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Inter', sans-serif;
        }

        body {
            background-color: var(--dark-bg);
            color: var(--dark-text);
            padding: 20px;
